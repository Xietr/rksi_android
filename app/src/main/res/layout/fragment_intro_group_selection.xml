<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="Выбери свою группу:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="18sp"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:textColor="#ffffff"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spinner" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
</LinearLayout>
